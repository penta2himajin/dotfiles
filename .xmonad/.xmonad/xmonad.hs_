import XMonad
import XMonad.Hooks.DynamicLog

main :: IO()
main = do
    xmobar myConfig >>= xmonad

myConfig = defaultConfig
    { terminal    = myTerminal
    , startupHook = myStartupHook
    , modMask = mod1Mask
    }

myTerminal    = "run_urxvt -fn \"xft:Noto mono-10\" -depth 32 -fg white -bg [50]black"
myStartupHook = do
    spawn "feh --bg-fill ~/Pictures/INTELLIGENCE.jpg"
    spawn "rofi"
    spawn "compton"
    spawn "xmobar"
